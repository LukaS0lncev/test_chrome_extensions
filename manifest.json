{
    "manifest_version": 3,
    "name": "Assistant Plugins",
    "version": "1.0.1",
    "permissions": [
      "scripting",
      "storage",
      "cookies",
      "notifications",
      "activeTab",
      "contextMenus",
      "tabs"
      ],
    "host_permissions": [
        "*://*/*"
      ],
    "content_scripts": [
      {
        "matches": ["*://*.mail.ru/*"],
        "js": ["mail.js"]
      },
      {
        "matches": ["*://*.lenta.ru/*"],
        "js": ["lenta.js"]
      }
    ],
    "icons": { 
        "16": "favicon-16x16.png",
        "32": "favicon-32x32.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
        "default_title": "Assistant Plugins", 
        "default_icon": "favicon-32x32.png", 
        "default_popup": "popup.html" 
    }
}
